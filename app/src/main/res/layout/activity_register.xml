<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/therapy"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/psychotherapy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/therapy"
        android:layout_marginTop="0dp"
        android:background="@drawable/tab_bg"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal"
        android:layout_gravity="fill">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_Tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/login"
            android:elevation="5dp"
            android:padding="8dp"
            android:text="Login"
            android:textAlignment="center"
            android:background="@color/color_logreg_tab"
            android:textColor="@color/FerrariRed"
            android:textSize="30sp"
            android:textStyle="bold"
            app:drawableTint="@color/NeonRed" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="8dp"
            android:drawableLeft="@drawable/register"
            android:layout_marginEnd="5dp"
            android:background="@drawable/login_bg"
            android:layout_marginStart="10dp"
            android:text="Register"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/FerrariRed"
            android:textAlignment="center"
            android:textSize="30sp"
            app:drawableTint="@color/NeonRed" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="15dp"
        android:padding="20dp"
        android:background="@drawable/login_bg"
        android:elevation="5dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/full_name"
            app:boxStrokeColor="@color/DeepSkyBlue"
            app:boxStrokeErrorColor="@color/ScarletRed"
            app:counterOverflowTextColor="@color/ScarletRed"
            app:counterTextColor="@color/DeepSkyBlue"
            android:textColorHint="@color/DeepSkyBlue"
            app:placeholderTextColor="#80000000"
            app:errorEnabled="true"
            app:errorIconTint="@color/ScarletRed"
            app:errorTextColor="@color/ScarletRed"
            app:helperTextTextColor="@color/DeepSkyBlue"
            app:hintTextColor="@color/DeepSkyBlue"
            app:placeholderText="abc">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/ic_profile_24"
                android:drawablePadding="5dp"
                android:padding="0dp"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_id_mob_no"
            app:boxStrokeColor="@color/DeepSkyBlue"
            android:textColorHint="@color/DeepSkyBlue"
            app:boxStrokeErrorColor="@color/ScarletRed"
            app:counterOverflowTextColor="@color/ScarletRed"
            app:errorEnabled="true"
            app:errorIconTint="@color/ScarletRed"
            app:errorTextColor="@color/ScarletRed"
            app:helperTextTextColor="@color/DeepSkyBlue"
            app:hintTextColor="@color/DeepSkyBlue"
            app:placeholderTextColor="#80000000"
            app:placeholderText="abc@gmail.com">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableLeft="@drawable/ic_email_24"
                android:drawablePadding="5dp"
                android:padding="0dp"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/DeepSkyBlue"
            android:textColorHint="@color/DeepSkyBlue"
            app:boxStrokeErrorColor="@color/ScarletRed"
            app:counterOverflowTextColor="@color/ScarletRed"
            app:counterTextColor="@color/DeepSkyBlue"
            app:errorEnabled="true"
            app:errorIconTint="@color/ScarletRed"
            app:errorTextColor="@color/ScarletRed"
            app:helperTextTextColor="@color/DeepSkyBlue"
            app:hintTextColor="@color/DeepSkyBlue"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableStart="@drawable/ic_password_24"
                android:drawablePadding="5dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="0dp"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/DeepSkyBlue"
            android:textColorHint="@color/DeepSkyBlue"
            app:boxStrokeErrorColor="@color/ScarletRed"
            app:counterOverflowTextColor="@color/ScarletRed"
            app:counterTextColor="@color/DeepSkyBlue"
            app:errorEnabled="true"
            app:errorIconTint="@color/ScarletRed"
            app:errorTextColor="@color/ScarletRed"
            app:hintTextColor="@color/DeepSkyBlue"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableStart="@drawable/ic_forgot_24"
                android:drawablePadding="5dp"
                android:hint="Conform Password"
                android:inputType="textPassword"
                android:padding="0dp"
                android:singleLine="true" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="fill">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_gravity="fill"
                android:backgroundTint="@color/ScarletRed"
                android:text="reset"
                android:textStyle="bold"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:backgroundTint="@color/Orange"
                android:text="Register"
                android:textStyle="bold"
                android:layout_weight="1"
                tools:ignore="OnClick" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="fill|center_vertical"
            android:orientation="horizontal">
            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="@color/Cyan"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login with"
                android:textColor="@color/Cyan"
                android:layout_marginHorizontal="10dp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="@color/Cyan"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Google_Btn"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_weight="1"
                android:text="Google"
                android:textColor="@color/Blue"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Facebook_Btn"
                android:layout_width="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_height="54dp"
                android:text="Facebook"
                android:textColor="@color/DeepSkyBlue"
                android:layout_weight="1"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:textStyle="bold"
                tools:ignore="OnClick" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>